<h1>Products</h1>

<% @products.each do |product| %>
  <%= image_tag product.image_url %>
  <%= product.title %>
  <%= product.price %>

  <%= form_tag orders_add_item_path, method: :post do %>
    <%= hidden_field_tag :product_id, product.id %>
    <%= number_field_tag :quantity, {}, { min: 1 } %>

    <%= submit_tag 'Buy' %>
  <% end %>
<% end %>

<%= paginate @products %>

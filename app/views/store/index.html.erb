<h1 class="mt-3">Products</h1>

<% @products.to_a.in_groups_of(3, false) do |products| %>
  <div class="row mt-3 ">
    <% products.each do |product| %>
      <%= render 'products/product', product: product %>
    <% end %>
  </div>
<% end %>

<div class="paginator mt-3">
  <%= paginate @products %>
</div>
